---
const { platform, url } = Astro.props;
---
<li>
    <a href={url}>
        <img src={`/img/${platform}_icon.svg`} alt="">
        {platform}
    </a>
</li>

<style>
    a {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: var(--brand-primary);
        font-size: 0;
    }
    
    img {
        height: 2rem;
        width: 2rem;
    }
    
    @media (min-width: 1024px) {
        a {
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-weight: 500;
        }
    }
</style>